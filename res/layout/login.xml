<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/labeluser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="56dp"
        android:text="用户名：" />

    <EditText
        android:id="@+id/EditTextUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labeluser"
        android:layout_alignBottom="@+id/labeluser"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/labeluser"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/labelpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/labeluser"
        android:layout_below="@+id/EditTextUser"
        android:layout_marginTop="44dp"
        android:text="密码：" />

    <EditText
        android:id="@+id/EditTextPassWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/labelpass"
        android:layout_alignBottom="@+id/labelpass"
        android:layout_alignLeft="@+id/EditTextUser"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/BtnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/EditTextPassWord"
        android:text="登录" />

    <Button
        android:id="@+id/BtnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/BtnLogin"
        android:layout_marginRight="47dp"
        android:text="注册" />

    <CheckBox
        android:id="@+id/CheckBox01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtnLogin"
        android:layout_centerHorizontal="true"
        android:text="记住密码" 
        android:checked="true"/>

</RelativeLayout>